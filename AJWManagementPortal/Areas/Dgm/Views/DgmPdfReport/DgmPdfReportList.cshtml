                            <th>@Localizer["ID#"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="tabbody SubH">
                            <td class="actionbtn">
                                <div class="btn-group">
                                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["Action"]
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item " asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-list-alt"></i> @Localizer["View"]</a>
                                        <a class="dropdown-item " asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-trash-alt"></i> @Localizer["Delete"]</a>
                                        <a class="dropdown-item " asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-file-download"></i> @Localizer["Download"]</a>
                                    </div>
                                </div>
                            </td>
                            <td>@*@item.ValueDate*@ </td>
                            <td>@Localizer["Audit D.G.M Pdf Report"] </td>
                            <td>@*@item.Id*@</td>
                        </tr>
                    </tbody>
                </table>
            </form>
            @*--------------------ended------------Audit Reports PDF----------------------------------*@
        </div>
    </div>
</body>
<!-- back to top button-->
<a id="button"></a>
<!-- back to top button-->
@section Scripts{

    <script>
        $(document).ready(function () {
            $('#DPReport').DataTable({
                "sPaginationType": "full_numbers"
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#MPReport').DataTable({
                "sPaginationType": "full_numbers"
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#YPReport').DataTable({
                "sPaginationType": "full_numbers"
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#APReport').DataTable({
                "sPaginationType": "full_numbers"
            });
        });
    </script>
}