@*this code is for language transalator inject localizer--------------*@
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@*this code is for language transalator inject localizer--------------*@

@{
    ViewData["Title"] = "DgmOfficeReports";
    Layout = "~/Views/Shared/_LayoutDgm.cshtml";
}

<style></style>

<br />
<body>
    <div class="container-fluid backgroundWhiteBorder10Padding DgmofficeReport">
        <div class="row">
            <div class="header col-sm-12">
      
                <a class="logo font-weight-bold font-weight-bolder">@Localizer["All Reports By D.G.M Office To C.E.O Office"]</a>
            </div>

            @*--------------------Start------------Dgm Office Reports----------------------------------*@

            <form class="tabled col-sm-12 formDgmofficeReport">
                <hr />
                <div class="col-sm-12 Createbtn">
                    <a type="button" class="btn btn-primary" asp-area="Dgm" asp-controller="DgmOfficeReports" asp-action="AllDepartmentDailyReportByDgmtoCeo"><i class="fas fa-plus"> @Localizer["Create New Daily Report By D.G.M To C.E.O"]</i> </a>
                </div>
                <br />
                <div class="col-sm-12">
                    <a class="titleDgmofficeReport" scope="col" colspan="10">@Localizer["All Department Daily Reports By D.G.M To C.E.O List"]</a>
                </div>
                <br />

                <table class="table table-bordered" id="DPReport">
                    <thead>
                        <tr class="Subhdr smallfontHeading">
                            <th> @Localizer["Action"]</th>
                            <th>@Localizer["Date"]</th>
                            <th scope="col">@Localizer["Title"]</th>
                            <th>@Localizer["ID#"]</th>
                        </tr>
                    </thead>
                    <tbody>


                        <tr class="tabbody SubH">
                            <td class="actionbtn SubH">
                                <div class="btn-group">
                                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["Action"]
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-list-alt"></i> @Localizer["View"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-edit"></i> @Localizer["Edit"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-trash-alt"></i> @Localizer["Delete"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-send"></i> @Localizer["Send to G.M Office"]</a>
                                    </div>
                                </div>
                            </td>
                            <td>@*@item.ValueDate*@ </td>
                            <td>@Localizer["All Department Daily Report By D.G.M To C.E.O"]</td>
                            <td>@*@item.Id*@</td>
                        </tr>
                        @*}*@

                    </tbody>
                </table>
                @*--------------------ended------------Daily Reports PDF----------------------------------*@
                @*--------------------sart------------Monthly Reports PDF----------------------------------*@
                <hr />
                <div class="col-sm-12 Createbtn">
                    <a type="button" class="btn btn-primary" asp-area="Dgm" asp-controller="DgmOfficeReports" asp-action="AllDepartmentMonthlyReportByDgmtoCeo"><i class="fas fa-plus"> @Localizer["Create New All Department Monthly Report"]</i> </a>
                </div>
                <br />
                <div class="col-sm-12">
                    <a class=" titleDgmofficeReport" scope="col" colspan="10">@Localizer["All Department Monthly Report By D.G.M To C.E.O Office List"]</a>
                </div>
                <br />

                <table class="table table-bordered" id="MPReport">
                    <thead>
                        <tr class="Subhdr smallfontHeading">
                            <th>@Localizer["Action"]</th>
                            <th>@Localizer["Date"]</th>
                            <th>@Localizer["Title"]</th>
                            <th>@Localizer["ID#"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="tabbody SubH">
                            <td class="actionbtn ">
                                <div class="btn-group">
                                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["Action"]
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-list-alt"></i> @Localizer["View"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-edit"></i> @Localizer["Edit"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-trash-alt"></i> @Localizer["Delete"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-send"></i> @Localizer["Send to G.M Office"]</a>
                                    </div>
                                </div>
                            </td>
                            <td>@*@item.ValueDate*@ </td>
                            <td>@Localizer["All Department Monthly Report By D.G.M To C.E.O"] </td>
                            <td>@*@item.Id*@</td>
                        </tr>
                        @*}*@

                    </tbody>
                </table>


                @*--------------------ended------------Monthly Reports PDF----------------------------------*@
                @*--------------------start------------Yearly Reports PDF----------------------------------*@
                <hr />
                <div class="col-sm-12 Createbtn">
                    <a type="button" class="btn btn-primary " asp-area="Dgm" asp-controller="DgmOfficeReports" asp-action="AllDepartmentYearlyReportByDgmtoCeo"><i class="fas fa-plus"> @Localizer["Create New All Department Yearly Report"]</i> </a>
                </div>
                <br />
                <div class="col-sm-12 text-center">
                    <a class="text-black titleDgmofficeReport" colspan="10">@Localizer["All Department Yearly Report By D.G.M To C.E.O Office List"]</a>
                </div>
                <br />
                <table class="table table-bordered" id="YPReport">
                    <thead>
                        <tr class="Subhdr smallfontHeading">
                            <th>@Localizer["Action"]</th>
                            <th>@Localizer["Date"]</th>
                            <th>@Localizer["Title"]</th>
                            <th>@Localizer["ID#"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="tabbody SubH">
                            <td class="actionbtn">
                                <div class="btn-group">
                                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["Action"]
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-list-alt"></i> @Localizer["View"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-edit"></i> @Localizer["Edit"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-trash-alt"></i> @Localizer["Delete"]</a>
