                                    </div>
                                </div>
                            </td>
                            <td>@*@item.ValueDate*@ </td>
                            <td>@Localizer["All Department Yearly Report By D.G.M To C.E.O"] </td>
                            <td>@*@item.Id*@</td>
                        </tr>
                    </tbody>
                </table>

                @*--------------------ended------------Yearly Reports PDF----------------------------------*@
                @*--------------------start------------Audit Reports PDF----------------------------------*@
                <hr />
                <div class="col-sm-12 Createbtn">
                    <a type="button" class="btn btn-primary " asp-area="Account" asp-controller="UploadAccountsPdfReport" asp-action="UploadPdfReport"><i class="fas fa-plus"> @Localizer["Create New D.G.M Office Audit Report"]</i> </a>
                </div>
                <br />
                <div class="col-sm-12 text-center">
                    <a class=" text-black titleDgmofficeReport" colspan="10">@Localizer["D.G.M Office Audit Report List"]</a>
                </div>
                <br />
                <table class="table table-bordered" id="APReport">
                    <thead>
                        <tr class="Subhdr smallfontHeading">
                            <th>@Localizer["Action"]</th>
                            <th>@Localizer["Date"]</th>
                            <th>@Localizer["Title"]</th>
                            <th>@Localizer["ID#"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="tabbody SubH">
                            <td class="actionbtn">
                                <div class="btn-group">
                                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["Action"]
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-list-alt"></i> @Localizer["View"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-edit"></i> @Localizer["Edit"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-trash-alt"></i> @Localizer["Delete"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-send"></i> @Localizer["Send to G.M Office"]</a>
                                    </div>
                                </div>
                            </td>
                            <td>@*@item.ValueDate*@ </td>
                            <td>@Localizer["D.G.M Office Audit Report"] </td>
                            <td>@*@item.Id*@</td>
                        </tr>
                    </tbody>
                </table>
            </form>
            @*--------------------ended------------Audit Reports PDF----------------------------------*@
        </div>
    </div>
</body>
<a id="button"></a>


@section scripts{
<script>
    $(document).ready(function () {
        $('#DPReport').DataTable({
            "sPaginationType": "full_numbers"
        });
    });

    $(document).ready(function () {
        $('#MPReport').DataTable({
            "sPaginationType": "full_numbers"
        });
    });


    $(document).ready(function () {
        $('#YPReport').DataTable({
            "sPaginationType": "full_numbers"
        });
    });


    $(document).ready(function () {
        $('#APReport').DataTable({
            "sPaginationType": "full_numbers"
        });
    });
</script>
 }




