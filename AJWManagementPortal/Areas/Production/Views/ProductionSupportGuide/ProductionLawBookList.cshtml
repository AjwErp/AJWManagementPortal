@*this code is for language transalator inject localizer--------------*@
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@*this code is for language transalator inject localizer--------------*@
@{
    ViewData["Title"] = "ProductionLawBookList";
    Layout = "~/Views/Shared/_LayoutProduction.cshtml";
}



<br />
<body>
    <div class="container-fluid backgroundWhiteBorder10Padding">
        <div class="row">
            <div class="header col-sm-12">
                <a class="logo font-weight-bold font-weight-bolder">@Localizer["Production Department Law Book List"]</a>
            </div>
            @*----------start-----general ledger  report lisst------------------*@
            <form class="tabled col-sm-12">
                <hr />
                <div class="col-sm-12 Createbtn">
                    <a type="button" class="btn btn-primary" asp-controller="ProductionSupportGuide" asp-area="Production" asp-action="ProductionLawBook"><i class="fas fa-street-view"> @Localizer["View Current Laws of Production Office"]</i> </a>
                </div>
                <br />
                <div class="col-sm-12 text-center">
                    <a class="titleAccountofficeReport" colspan="10">@Localizer["Monthly Accounts Department Law Book List-Account Office"]</a>
                </div>
                <br />
                <table class="table table-bordered SubH" id="PLBook">
                    <thead>
                        <tr class="Subhdr SubH">
                            <th>@Localizer["Action"] </th>
                            <th>@Localizer["Date"]</th>
                            <th>@Localizer["Title"]</th>
                            <th>@Localizer["ID#"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="tabbody SubH">
                            <td class="actionbtn">
                                <div class="btn-group">
                                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["Action"]
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-list-alt"></i> @Localizer["View"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-edit"></i> @Localizer["Edit"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-trash-alt"></i> @Localizer["Delete"]</a>
                                        <a class="dropdown-item" asp-action="" asp-controller="" asp-area="Account"><i class="fas fa-file-download"></i> @Localizer["Download"]</a>
                                    </div>
                                </div>
                            </td>
                            <td></td>
                            <td>@Localizer["Production Department Law Book"] </td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>

                @*------------------------ended---------------------------- Table for Daily GeneralLedgerBook List----------------------------------------------------------*@
            </form>
        </div>
    </div>
</body>

<!-- back to top button-->
<a id="button"></a>
<!-- back to top button-->
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#PLBook').DataTable({
                "sPaginationType": "full_numbers"
            });
        });

    </script>

}